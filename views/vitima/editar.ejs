<!DOCTYPE html>
<html lang="pt-br">
<html data-bs-theme="dark"></html>
<head>
    <meta charset="UTF-8" />
    <title>Editar Vítima</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Editar Vítima</h1>
        <form action="/vitimas/atualizar/<%= vitima._id %>" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="nome" class="form-label">Nome:</label>
                <input type="text" id="nome" name="nome" value="<%= vitima.nome %>" class="form-control" required />
                <div class="invalid-feedback">
                    Por favor, insira o nome.
                </div>
            </div>

            <div class="mb-3">
                <label for="cpf" class="form-label">CPF:</label>
                <input type="text" id="cpf" name="cpf" value="<%= vitima.cpf %>" class="form-control" required />
                <div class="invalid-feedback">
                    Por favor, insira o CPF.
                </div>
            </div>

            <div class="mb-3">
                <label for="dataNascimento" class="form-label">Data de Nascimento:</label>
                <input type="date" id="dataNascimento" name="dataNascimento" value="<%= vitima.dataNascimento.toISOString().substring(0,10) %>" class="form-control" required />
                <div class="invalid-feedback">
                    Por favor, insira a data de nascimento.
                </div>
            </div>

            <div class="mb-3">
                <label for="nomePai" class="form-label">Nome do Pai:</label>
                <input type="text" id="nomePai" name="nomePai" value="<%= vitima.filiacao ? vitima.filiacao.split(',')[0].replace('Pai: ', '') : '' %>" class="form-control" />
            </div>

            <div class="mb-3">
                <label for="nomeMae" class="form-label">Nome da Mãe:</label>
                <input type="text" id="nomeMae" name="nomeMae" value="<%= vitima.filiacao ? vitima.filiacao.split(',')[1].replace('Mãe: ', '') : '' %>" class="form-control" />
            </div>

            <div class="mb-3">
                <label for="endereco" class="form-label">Endereço:</label>
                <input type="text" id="endereco" name="endereco" value="<%= vitima.endereco %>" class="form-control" />
            </div>

            <div class="mb-3">
                <label for="telefone" class="form-label">Telefone:</label>
                <input type="text" id="telefone" name="telefone" value="<%= vitima.telefone %>" class="form-control" />
            </div>

            <div class="mb-3">
                <label for="grauEscolaridade" class="form-label">Grau de Escolaridade:</label>
                <input type="text" id="grauEscolaridade" name="grauEscolaridade" value="<%= vitima.grauEscolaridade %>" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            <a href="/vitimas/relatorio" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>

    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
</body>
</html>
