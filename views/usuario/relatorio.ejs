<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Relatório de Usuarios</title>
    <%- include('../partials/cabecalho') %>
    <%- include('../partials/menu') %>
</head>
<body>
  <div class="container">
    <br />
    <h3>Relatório de Usuarios</h3>

    <% if (status == '1') { %>
      <div class="alert alert-success alert-dismissible">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        Cadastrado Com <b>Sucesso!</b>
      </div>
    <% } %>

    <table class="table table-striped table-dark table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Telefone</th>
          <th>Email</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% usuarios.forEach(usuario => { %>
          <tr>
            <td><%= usuario.nome %></td>
            <td><%= usuario.telefone %></td>
            <td><%= usuario.email %></td>
            <td>
              <a href="/usuarios/detalhar/<%= usuario._id %>" class="btn btn-primary btn-sm me-1"data-bs-toggle="tooltip" title="detalhes do usuario">
                <i class="bi bi-info-circle"></i> 
              </a>
              <a href="/usuarios/editar/<%= usuario._id %>" class="btn btn-warning btn-sm me-1"data-bs-toggle="tooltip" title="atualizar usuario">
                <i class="bi bi-pencil-square"></i> 
              </a>
              <form action="/usuarios/<%= usuario._id %>/remover" method="POST" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir este usuário?');">
                <button type="submit" class="btn btn-danger btn-sm"data-bs-toggle="tooltip" title="excluir usuario">
                  <i class="bi bi-trash"></i> 
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <%- include('../partials/rodape') %>
</body>
</html>
